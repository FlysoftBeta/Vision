{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:2990",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Magenta Player",
        "version": "../package.json"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "Music",
            "copyright": "Copyright (c) Flysoft.",
            "deb": {
                "depends": []
            },
            "appimage": {
                "bundleMediaFramework": true
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.flysoft.magenta",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "decorations": true,
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Magenta",
                "width": 800
            }
        ]
    }
}
